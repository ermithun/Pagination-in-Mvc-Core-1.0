@model Sakura.AspNetCore.IPagedList<Pagination.Models.Product>

@{
    Layout = ViewBag.Layout;
}

<div id="replace-search-data">
    <fieldset class="col-md-12">
        <legend>Product</legend>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-responsive table-bordered tablesorter tablesorter-blue">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Unit)
                    </th>
                    <th class="col-md-2 sorter-false">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="glyphicon glyphicon-edit input-sm"></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="glyphicon glyphicon-trash input-sm"></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="glyphicon glyphicon-list input-sm"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <ul class="pagination">
                <pager source="@Model" data-ajax-method="GET" data-ajax-update="#replace-search-data" />
            </ul>
        </div>
        </fieldset>
</div>

